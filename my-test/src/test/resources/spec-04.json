[
  {
    "operation": "shift",
    "spec": {
      "lists": {
        // match all elements of lists array
        "*": {
          // match the first element of nested array in lists array
          // and write it to the element of lists array at this level in the tree in the output
          "0": "lists[&1].id",
          // the same as above
          "1": "lists[&1].clientId",
          // the same as above
          "2": "lists[&1].name",
          // the same as above
          "3": "lists[&1].custom_value"
        }
      }
    }
  }
]
